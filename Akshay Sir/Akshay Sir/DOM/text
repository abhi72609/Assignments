// ! CRUD operation over HTML Elements 
// Create
// Read 
// ! dom selector methods 
// !1. document.getElementById('id')
// it will return a single html element node , based on the id we are passing as argument
let list = document.getElementById('first')
console.log(list);

// !2. document.getElementsByTagName('tag')
// it will return an htmlcollection of all the matching html element nodes with a particular tag we are passing as argument 
// html collection is an array like pbject , it is similar to array but it is not array (we cannot perform array operations over that)
// let allLi = document.getElementsByTagName('li')
// console.log(allLi); //HTMLCollection(6)Â [li#first, li, li#first, li, li, li, first: li#first]

// ! 3.document.getElementsByClassName('class')
// it will return an htmlcollection of all the matching html element nodes with a particular class we are passing as argument 
let allOdd = document.getElementsByClassName('odd')
console.log(allOdd); //HTMLCollection(2)Â [li#first.odd, li#first.odd, first: li#first.odd]

// ! 4.document.getElementsByName('name')
//  it will return an nodeList of all the matching html element nodes with a particular name attribute value we are passing as argument 
// let alllUser = document.getElementsByName('user')
// console.log(alllUser); //NodeList(2)Â [input, input]

// ! 5. document.querySelector('anyCssSelector')
// it is an advance method which is used to target first matching element node based on any css selector 
// let first = document.querySelector('#first')
// console.log(first);
// let odd = document.querySelector('.odd')
// console.log(odd);

// ! 6. document.querySelectorAll('anyCssSelector')
// it is an advance method which is used to target all matching element node based on any css selector 
// it will return aa nodelist 

// let first = document.querySelectorAll('#first')
// console.log(first);
// let odd = document.querySelectorAll('.odd')
// console.log(odd);

// ! nodelist vs htmlCollection 
// nodelist is advanced because it has a method called as forEach 




